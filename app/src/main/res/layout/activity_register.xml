<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="20dp"
        android:layout_marginVertical="20dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/edtfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/edtlast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:hint="First Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/edtuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:hint="username"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:inputType="textPersonName"
        android:hint="email"
        />

    <EditText
        android:id="@+id/editmobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:inputType="textPersonName"
        android:hint="Mobile"
        />

    <EditText
        android:id="@+id/edtpsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="20"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:hint="Passward"
        android:inputType="textPassword"
         />

    <EditText
        android:id="@+id/editconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:inputType="textPassword"
        android:hint="Confirm Passward" />

    <Button
        android:id="@+id/button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btng"
        android:textColor="#fff"
        android:text="Register as Customer"
        android:onClick="onTapCustomer"/>
</LinearLayout>