<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/food"
 />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/view_predict"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/main_gradiaent_corner"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hey Check This !"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    ></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hey Check This !"
                            android:id="@+id/txt_1"
                            android:maxLines="1"
                            android:textColor="@color/white"

                            ></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hey Check This !"
                            android:id="@+id/txt_2"
                            android:maxLines="1"
                            android:textColor="@color/white"

                            ></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hey Check This !"
                            android:id="@+id/txt_3"
                            android:maxLines="1"
                            android:textColor="@color/white"

                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rs 00"
                            android:textSize="25dp"
                            android:id="@+id/txt_price_home"
                            android:gravity="right"
                            android:textColor="@color/white"
                            android:textStyle="bold"

                            ></TextView>
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+more"
                    android:textSize="15dp"
                    android:id="@+id/txt_more"
                    android:textColor="@color/white"

                    ></TextView>


            </LinearLayout>





        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Product Search"
                android:layout_weight="1"
                android:onClick="onTapProductSearch"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/text_line"/>

            <Button
                android:layout_margin="5dp"
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Product List"
                android:layout_weight="1"
                android:onClick="onTapProductListBtn"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/text_line"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_margin="5dp"
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="MY Orders"
                android:layout_weight="1"
                android:onClick="onTapOrders"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/text_line"/>

            <Button
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="My Account"
                android:onClick="onTapAccountBtn"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/text_line"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>